<h4>Search for movie</h4>
<form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get">
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat search-color">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
</form>
<br>
<br>

<h3>All movies</h3>
<br>
<br>
<ul>
  <% @movies.each do |movie| %>
    <div class="button-19"><li><%= link_to movie.title, movie_path(movie), class: "no-decoration" %></li></div>
  <% end %>
</ul>

<div class="button-19">
<%= link_to "Go back home", root_path, class: "no-decoration" %>
</div>

