<h3 class="m-2">All movies</h3>
<br>
<div class="cards m-1">
  <% @movies.each do |movie| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path movie.photo.key, height: 300, crop: :fill %>')">
      <div class="no-decoration ">
        <%= link_to movie.title, movie_path(movie.id) %>
      </div>
    </div>
  <% end %>
</div>

<div class="top-margin-map bottom-margin-map corners" style="width: 100%; height: 300px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>" class="mapboxgl-popup-content">
</div>

