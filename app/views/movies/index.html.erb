<h4>Search for movie</h4>
<%= form_tag movies_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a movie"
  %>
  <%= submit_tag "Search", class: "btn-flat s-blue" %>
<% end %>
<br>
<br>

<h3 class="m-2">All movies</h3>
<br>
<div class="cards m-1">
  <% @movies.each do |movie| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path movie.photo.key, height: 300, crop: :fill %>')">
      <%= link_to movie.title, movie_path(movie.id)%>
    </div>
  <% end %>
</div>

<div style="width: 100%; height: 300px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<%= link_to "Go back home", root_path, class: "btn-flat s-blue" %>
