<%= simple_form_for(movie) do |f| %>
  <%= f.input :title %>
  <%= f.select :genre, options_for_select(%w[Genre Action Anime Comedy Fantasy Horror Love Thriller]) %>
  <%= f.input :rating %>
  <%= f.input :description %>
  <%= f.input :director %>
  <%= f.input :price %>
  <%= f.input :address %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>
