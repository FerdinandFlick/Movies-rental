<div class="card-trip">
  <%= cl_image_tag @movie.photo.key, height: 300, crop: :fill %>
  <div class="card-trip-infos">
    <div>
      <h2><%= @movie.title %></h2>
      <p><%= @movie.genre %></p>
      <p><%= @movie.description %></p>
      <p>Director: <%= @movie.director %></p>
      <p><%= @movie.rating %></p>
    </div>
    <h2 class="card-trip-pricing">Â£ <%= @movie.price %></h2>
    <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
  </div>
</div>

<div class="container m-3">
  <%= link_to "Delete #{@movie.title}",
              movie_path(@movie),
              method: :delete,
              data: { confirm: "Are you sure?" }, class: "btn-flat s-blue" %>

  <%= link_to "Edit #{@movie.title}", edit_movie_path, class: "btn-flat s-blue" %>

  <%= link_to "Movies", movies_path, class: "btn-flat s-blue" %>
</div>
