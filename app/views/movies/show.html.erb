<h2><%= @movie.title %></h2>
<p><%= @movie.rating %></p>
<p><%= @movie.description %></p>
<p><%= @movie.director %></p>
<p><%= @movie.price %></p>

<%= link_to "Delete #{@movie.title}",
            movie_path(@movie),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

<div class="btn btn-ghost">
  <%= link_to "Create a new movie", new_movie_path %>
</div>

<div class="btn btn-ghost">
  <%= link_to "Edit this movie", edit_movie_path %>
</div>
